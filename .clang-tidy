Checks: >
  *,
  -altera-*,
  -clang-diagnostic-unused-macros,
  -llvmlibc-*,
CheckOptions:
  - key:   hicpp-uppercase-literal-suffix.NewSuffixes
    value: 'L;U;UL;ULL'
  - key:   readability-uppercase-literal-suffix.NewSuffixes
    value: 'L;U;UL;ULL'
WarningsAsErrors: '*'
HeaderFilterRegex: '.*/sratom/[^/]+.h'
FormatStyle: file
